// Simple test without case expressions to verify core functionality

// Simple function with type annotation
add(x: Int, y: Int): Int = x + y

// Function with block body
calculate(a: Int, b: Int): Int = {
    sum = a + b
    product = a * b
    result = sum + product
    result
}

// Function with when expression (simple conditions)
grade(score: Int): String = {
    when score {
        >= 90 -> "A"
        >= 80 -> "B"
        >= 70 -> "C"
        _ -> "F"
    }
}

// Simple variables with type annotations
x: Int = 10
y: Int = 20
name: String = "Test"

// Main function
main(): Int = {
    sum_result = add(x, y)
    calc_result = calculate(5, 3)
    grade_result = grade(85)

    sum_result + calc_result
}
